{
  "scripts": {
    "clean": "del _site",
    "dev:styles": "TAILWIND_MODE=WATCH npx postcss src/styles/tailwind.pcss -o _site/style.css --config src/styles/ --watch",
    "dev:scripts": "esbuild src/main.js --bundle --watch --outfile=_site/js/main.js",
    "dev:11ty": "eleventy --serve --watch --incremental",
    "start": "run-p dev:*",
    "build:styles": "NODE_ENV=production npx postcss src/styles/tailwind.pcss -o _site/style.css --config src/styles/",
    "build:scripts": "esbuild src/main.js --bundle --minify --outfile=_site/js/main.js",
    "polish": "npx @divriots/jampack ./_site --fast",
    "build": "run-s build:* ",
    "new": "npx @bookshop/init --component"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@alpinejs/intersect": "^3.10.4",
    "@divriots/jampack": "^0.13.0",
    "@pagefind/modular-ui": "1.0.3",
    "@tailwindcss/typography": "^0.5.8",
    "alpine-splide": "^1.2.0",
    "alpinejs": "^3.10.4",
    "autoprefixer": "^10.4.13",
    "csvtojson": "^2.0.10",
    "del-cli": "^5.0.0",
    "eleventy-plugin-local-images": "^0.4.1",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "esbuild": "^0.15.10",
    "js-yaml": "^4.1.0",
    "markdown-it-link-attributes": "^4.0.1",
    "node-fetch": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "probe-image-size": "^7.2.3",
    "punycode": "^2.1.1",
    "scroll-padlock": "^2.2.0",
    "tailwindcss": "^3.2.6"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^3.1.8",
    "@alpinejs/collapse": "^3.10.5",
    "@alpinejs/focus": "^3.10.5",
    "@alpinejs/persist": "^3.11.1",
    "@bookshop/browser": "3.6.3",
    "@bookshop/eleventy-bookshop": "3.6.3",
    "@bookshop/eleventy-engine": "3.6.3",
    "@bookshop/generate": "3.6.3",
    "@tailwindcss/container-queries": "^0.1.0",
    "@zachleat/table-saw": "^1.0.6",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.1",
    "recursive-copy": "^2.0.14"
  }
